
.banner-3-wrapper{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: fit-content;
    padding: 40px;
}

.banner-3-img{
    width: 100%;
}

.banner-footer{
    display: flex;
    margin-top: 40px;
}

.banner-3-title{
    font-weight: 700;
    font-size: 40px;
    line-height: 143%;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: #000000;
    max-width: 40%;
}

.banner-3-content{
    display: flex;
    flex-direction: column;
    font-weight: 400;
    font-size: 14px;
    line-height: 187%;
    color: #767676;
    max-width: 60%;

}

.about-us{
  font-family: 'OpenSans-Regular';
  font-weight: 400;
  margin-top: 24px;  
}

.about-us img{
    margin-right: 16px;
}