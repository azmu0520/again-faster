footer{
    display: flex;
    width: 100%;
    height: 438px;
    position: relative;
    background: #F1F1F1;
    justify-content: space-between;
    margin-top: 2px;
    z-index: -2;
    align-items: center;
    padding: 0 8rem;

}

.newsletter__title{
    font-weight: 400;
    font-size: 12px;
    line-height: 14px;
    text-align: center;
    letter-spacing: 0.165em;
    text-transform: uppercase;
    color: #000000;
}

.newsletter{
    display: flex;
    width: 100%;
    height: fit-content;
    flex-direction: column;
}



.footer-link{
    position: absolute;
    left: 0 ;
    top: 50%;
    transform: translateY(-50%);
    z-index: -1;
    width: 20%;
}

.newsletter{
    width: 40%;
}