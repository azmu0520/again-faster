footer{
    display: flex;
    width: 100%;
    height: 438px;
    position: relative;
    background: #F1F1F1;
    justify-content: space-between;
    margin-top: 2px;
    z-index: -2;
    align-items: center;
    padding: 0 8rem;

}

.newsletter__title{
    font-weight: 400;
    font-size: 12px;
    line-height: 14px;
    text-align: center;
    letter-spacing: 0.165em;
    text-transform: uppercase;
    color: #000000;
}

.newsletter{
    display: flex;
    width: 100%;
    height: fit-content;
    flex-direction: column;
    align-items: flex-start;
}


.newsletter__input__wrap{
    display: flex;
    font-weight: 400;
    font-size: 14px;
    line-height: 141.8%;
    color: #000000;
    opacity: 0.5;
    position: relative;
    width: 100%;
    height: fit-content;
    margin: 10px 0 26px 0;
}


.icon-arrow{
    position: absolute;
    right: 0;
    top: 50%;
}

.newsletter__input{
    width: 100%;
    height: 42px;
    background-color: transparent;
    border: none;
    border-bottom: 1px solid #C4C4C4;
}

.footer-link{
    position: absolute;
    left: 0 ;
    top: 50%;
    transform: translateY(-50%);
    z-index: -1;
    width: 20%;
}

.newsletter{
    width: 40%;
}

.footer__link-header{
    font-weight: 400;
    font-size: 12px;
    line-height: 14px;
    letter-spacing: 0.165em;
    text-transform: uppercase;
    color: #353535;
    margin-bottom: 32px;

}
.footer__links{
    list-style: none;

}
.footer__link{
    font-weight: 400;
    font-size: 14px;
    line-height: 167.5%;
    color: #7E7E7E;
    margin-bottom: 12px;
    
}