.swiper1 {
  display: flex;
  max-width: 100%;
  height: 404px;
  margin: 97px 40px 120px 40px;
}

.image__wrapp {
  display: flex;
  align-items: center;
  justify-content: center;
  max-width: 328px;
  width: 100%;
  max-height: 334px;
  height: 100%;
}

.slide__img {
  width: 100%;
  height: 100%;
}

.slide__title {
  font-weight: 300;
  font-size: 12px;
  line-height: 168%;
  text-align:
    center;
  letter-spacing: 0.16em;
  text-transform: uppercase;
  color: #000000;
  font-family: 'Oswald-Regular';
  cursor: pointer;
}

.arrow_icon {
  opacity: 0;
  margin-left: 10px;
  transition: all .4s ease-in-out;
}

.collection-wrap:hover .arrow_icon {
  opacity: 1;
}

.collection-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 16px;
}

.swiper-scrollbar {
  margin-top: 40px;
}