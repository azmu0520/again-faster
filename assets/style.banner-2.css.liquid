
.banner-2__wrapper{
    display: flex;
    align-items: center;
    width: 100%;
    height: 690px;
}
.content_wrap{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    max-width: 500px;
    padding-left: 4rem;
}
.banner__title{
    font-weight: 700;
    font-size: 40px;
    line-height: 143%;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: #FFFFFF;

}
.banner__text{
    font-weight: 400;
    font-size: 14px;
    line-height: 167.5%;
    color: #FFFFFF;
    margin: 24px 0 40px 0;
}
.banner__ccta{
    display: flex;
    align-items: center;
    width: 236px;
    height: 58px;
    font-weight: 400;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.175em;
    text-transform: uppercase;
    color: #FFFFFF;
    border: 1px solid #FFFFFF;
    padding: 0 24px;

}

.banner__ccta a {
    color: inherit;
    text-decoration: none;
}

.cta--arrow{
  margin-left: auto;
}