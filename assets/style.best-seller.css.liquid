
.best-seller-wrap{
    display: flex;

}

.opener-slide{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.swiper2{
    width: 100%;
    min-height: 550px;
    margin-top: 120px ;
    padding: 0 40px;
}

.swiper-wrapper{
    width: 100%;
    height: 100%;
}

.opener__suptitle{
    font-weight: 300;
    font-size: 12px;
    line-height: 168%;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: #000000;
    padding-right: 25px;
    }
.opener__title{
    font-weight: 600;
    font-size: 24px;
    line-height: 130%;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #000000;
    margin: 16px 0;

}
.opener__text{
    font-weight: 400;
    font-size: 14px;
    line-height: 167.5%;
    color: #8F8F8F;

}
.opener__cta{
    font-weight: 400;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.175em;
    text-transform: uppercase;
    color: #000000;
    margin-top: 40px;

}

.opener__cta a{
    color: inherit;
}

.product__wrap{
    display: flex;
    flex-direction: column;
}
.product__image__wrap{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 328px;
    height: 410px;
    background-color: #f5f5f5;
    position: relative;
}

.image__badge{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 90px;
    height: 28px;
    background-color: white;
    font-weight: 400;
    font-size: 12px;
    line-height: 167.5%;
    color: #000000;
    position: absolute;
    top: 8px;
    left: 8px;

    
}

.product__image{
    width: 100%;
}

.product_title{
    margin: 8px 0;
    font-weight: 300;
    font-size: 12px;
    line-height: 168%;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: #000000;

}
.product__stars img{
    margin-right: 4px;
}

.product__price{
    font-weight: 300;
    font-size: 12px;
    line-height: 168%;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: #353535;
    margin-top: 8px;
}