.blocks__wrapper{
    display: flex;
    padding: 120px 80px;
    column-gap: 44px;
}

.block-wrap{
    flex: 1;
}

.block__image{
    width: 100%;
}

.block__title{
    font-weight: 600;
    font-size: 24px;
    line-height: 130%;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #000000;
}

.blocks__cta{
    font-weight: 400;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.175em;
    text-transform: uppercase;
    color: #000000;
    margin-top: 24px;
}

.blocks__cta a{
    color: inherit;
}