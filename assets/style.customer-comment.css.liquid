.comment__wrapper{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: fit-content;
}

.comment__container{
    display: flex;
    align-items: center;
    flex-direction: column;
    max-width: 1000px;
    width: 100%;
    margin: 160px auto;

}

.comment__suptitle{
    font-weight: 300;
    font-size: 12px;
    line-height: 168%;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: #000000;

}
.comment__title{
    font-weight: 600;
    font-size: 24px;
    line-height: 167%;
    text-align: center;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #000000;
    margin: 64px 0;
}
.comment__user{
    font-weight: 400;
    font-size: 14px;
    line-height: 167.5%;
    text-align: center;
    color: #000000;
}