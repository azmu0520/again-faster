.plp__opener__wrap{
    display: flex;
    flex-direction: column;
    padding: 40px;
    width: 100%;
    min-height: 100vh;
    column-gap: 60px;
    margin-top: 82px;
}

.opener__container{
    display: flex;
    max-width: 1400px;
    margin: auto ;
}
.opener__content{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    flex: 2;
}

.content__ibrow{
    font-weight: 300;
    font-size: 12px;
    line-height: 168%;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: #C2A578;

}

.opener__headline{
    font-weight: 700;
    font-size: 40px;
    line-height: 62px;
    letter-spacing: 0.175em;
    text-transform: uppercase;
    color: #000000;
    margin: 16px 0 40px 0;
}
.opener__cta{
    display: flex;
    align-items: center;
    width: 236px;
    height: 58px;
    padding: 21px 24px;
    border: 1px solid #000000;
}

.opener__cta a{
    text-decoration: none;
    color: inherit;
}

.cta__icon{
    margin-left: auto;
}
.opener__images{
    display: flex;
    align-items: flex-start;
    flex: 3;
    position: relative;
}
.openr__main__image{
    width: 570px;
height: 790px;
}
.openr__side__image{
    width: 304px;
height: 359px;
position: absolute;
bottom: 0;
right: 0;
}

.collections_wrap{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
padding-top: 40px;
}

.collection{
    width: 328px;
    height: 362px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.collection__img{
    width: 100%;
    max-height: 334px;
}


.product__title{
    margin-top: 8px;
}