
.banner__wrapper{
    display: flex;
    width: 100%;
    max-height: 1024px;
    box-sizing: border-box;
   
}

.container{
    display: flex;
    align-items: center;
    align-self: center;
    max-width: 1440px;
    width: 100%;
    margin: 0 auto;
}

.main__imag__wrap{
    flex: 6.5; 
    margin-left: auto;
}
.banner__main__img{
   max-width: 100%;
}

.banner__sidebar{
    flex: 3.5;
    margin-right: auto;
}
*{
    font-family: 'OpenSans-Regular';

}


.sidebar__subtitle{
    font-family: 'Oswald-Light';
    font-weight: 300;
    font-size: 12px;
    line-height: 168%;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: #000000;
    margin: 40px 0 8px 0;

}

.sidebar__title{
    font-family: 'OpenSans-Bold';
    font-style: normal;
    font-weight: 600;
    font-size: 24px;
    line-height: 130%;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #000000;
}

.sidebar__text{
    display: block;
    font-weight: 400;
    font-size: 14px;
    line-height: 167.5%;
    color: #8F8F8F;
margin: 16px 0 40px 0;
}

.sidebar__cta{
    font-style: normal;
    font-weight: 400;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.175em;
    text-transform: uppercase;
    color: #000000;

}

.sidebar__cta a{
color: inherit;
}