

.header__nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 52px;
    padding: 0 40px;
    position: fixed;
    top: 40px;
  }
  
  .nav__logo {
    max-width: 213px;
    height: 20px;
  }
  .nav__links {
    display: flex;
    align-items: center;
    list-style: none;
  }
  
  .nav__link {
    font-family: 'OpenSans-Regular';
    font-weight: 400;
    font-size: 12px;
    line-height: 140%;
    letter-spacing: 0.175em;
    text-transform: uppercase;
    color: #ffffff;
    margin-right: 40px;
  }
  
  .nav__link a {
    color: inherit;
    text-decoration: none;
  }
  
  .nav__icons {
    display: flex;
    align-items: center;
  }
  
  .nav__icons img {
    width: 16px;
    height: 16px;
    margin-right: 19px;
  }
  
