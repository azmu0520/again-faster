.arrival__wrap{
    display: flex;
    flex-direction: column;
   justify-content: center;
padding: 0 40px;
}

.arrival__title{
    font-weight: 700;
    font-size: 40px;
    line-height: 143%;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: #FFFFFF;
}

.arrival__cta{
    display: flex;
    align-items: center;
    width: 236px;
    height: 58px;
    font-weight: 400;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.175em;
    text-transform: uppercase;
    color: #FFFFFF;
    border: 1px solid #fff;
    padding: 0 24px;
    margin-top: 24px;
}
.arrival__cta a{
    color: inherit;
}