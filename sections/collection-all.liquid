{{ 'style.collection-all.css' | asset_url | stylesheet_tag }}


{% assign url  = collection.url | split: '/' | last %}

<div class="collection__all__container">
    <div class="collection__all__wrap">
        <h3 class="collection__title">
            {{collection.title}}
        </h3>
        <ul class="collection__filter">
            {% for collection in section.settings.collection_list %}
                {% if url  == collection.handle%}
                    <li class="filter__item-breadcums active_link">
                        {{collection.handle | link_to: collection.url }}
                    </li>
                {% else %}
                    <li class="filter__item-breadcums">
                        {{collection.handle | link_to: collection.url }}
                    </li>
                {% endif %}
                    <span>/</span>
            {% endfor %}
        </ul>
        <div class="products__wrap">
            {% for product in collection.products %}
                <div class="priduct__item">
                    <div class="image__wrap">
                        <a href="{{product.url}}">
                            <img src="{{product.images[0] | img_url: 'master' }}" alt="image" class="product__image">
                        </a>
                    </div>
                    <h5>{{product.title}}</h5>
                    <div class="stars__wrap">
                        <img src="{{'icon.star.svg' | asset_url }}" alt="star">
                        <img src="{{'icon.star.svg' | asset_url }}" alt="star">
                        <img src="{{'icon.star.svg' | asset_url }}" alt="star">
                        <img src="{{'icon.star.svg' | asset_url }}" alt="star">
                        <img src="{{'icon.star.svg' | asset_url }}" alt="star">
                    </div>
                    <h5 class="product__price">${{product.price}}.00</h5>
                </div>
            {% endfor %}
        </div>
    </div>
</div>


 
{% schema %}
{
    "name": "Breadcrumb List",
    "settings": [
        {
            "type":"collection_list",
            "id":"collection_list",
            "label":"Collection List"
        }
    ]
}
{% endschema %}