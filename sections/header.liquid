{% schema %}

{
    "name": "Header",
    "settings": [
        {
            "type": "image_picker",
            "id": "logo",
            "label": "Header Logo"
        }, {
            "type": "image_picker",
            "id": "trans_logo",
            "label": "Header Transparent Logo"
        }, {
            "type": "range",
            "id": "logo_width",
            "min": 200,
            "max": 300,
            "step": 10,
            "default": 230,
            "label": "Logo width"
        }, {
            "type": "link_list",
            "id": "menu",
            "default": "main-menu",
            "label": "Menu Link"
        }
    ]
}

{% endschema %}

<style>
    .heading-logo {
        max-width: {{section.settings.logo_width}}px !important;
    };
</style>